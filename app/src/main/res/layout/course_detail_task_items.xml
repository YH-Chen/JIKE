<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">

    <LinearLayout
        android:id="@+id/course_detail_task_item_real"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#7fffffff"
        android:paddingStart="3dp"
        android:paddingEnd="3dp">
        <TextView
            android:id="@+id/course_detail_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="任务"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/course_detail_task_ddl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="DDL："
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/course_detail_task_item_type_outer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#20599d71"
        android:visibility="visible"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingStart="3dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/course_detail_task_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已参加"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>
